<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name + ' ' + @friend.last_name%></h1>
  <p class="lead"><%= 'Twitter: ' + @friend.twitter + ' | Phone: ' + @friend.phone + ' | Email: ' + @friend.email%></p>
  <hr class="my-4">
  
  <div class="col-md-12 col-sm-12 col-lg-10">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: 'btn btn-secondary col-md-3 mb-1' %>
    <%= link_to "Back to friends", friends_path, class: 'btn btn-dark col-md-4 mb-1' %>

    <%= link_to "Destroy this friend", @friend, method: :delete, class: 'btn btn-danger col-md-4 mb-1' %>
  </div>
</div>


